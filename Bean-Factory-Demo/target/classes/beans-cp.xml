<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<bean id="myorg" class="com.spring.beanFactory.Organization"
		factory-method="createInstance">
		<constructor-arg value="BMW" index="0"></constructor-arg>
		<constructor-arg value="1929" index="1"></constructor-arg>
	</bean>
	
	
	<bean id="myorg2" class="com.spring.beanFactory.Organization"
		factory-method="getInstance" factory-bean="organizationFactory">
		<constructor-arg value="BMW" index="0"></constructor-arg>
		<constructor-arg value="1929" index="1"></constructor-arg>
	</bean>
	
	<bean id="organizationFactory"
		class="com.spring.beanFactory.OrganizationFactory">
	</bean>
	
</beans>
